{
  "expo": {
    "name": "Smearch",
    "slug": "frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": ["ios", "android", "web"],
    "icon": "./assets/images/icon.png",
    "scheme": "mma",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Smearch cần quyền truy cập camera để chụp ảnh và quét mã QR.",
        "NSMicrophoneUsageDescription": "Smearch cần quyền microphone để ghi âm video.",
        "NSPhotoLibraryUsageDescription": "Smearch cần quyền truy cập thư viện ảnh để lưu và chọn ảnh."
      }
    },
    "android": {
      "package": "com.smearch.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "mobile.smearch.io.vn",
              "pathPrefix": "/sso-callback"
            },
            {
              "scheme": "mma",
              "host": "callback",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0f6d9dac-8f86-4b47-93e4-d54b2029514a"
      },
      "clerkPublishableKey": "pk_live_Y2xlcmsubW9iaWxlLnNtZWFyY2guaW8udm4k"
    },
    "owner": "hieunek2211"
  }
}
